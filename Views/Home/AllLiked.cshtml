<h2>Welcome!</h2>

<a href="/UserShow/@Model.Idea.Creator.Userid">@Model.Idea.Creator.Name</a> says:
<div style="width: 300px; border: 1px solid black;">@Model.Idea.Text</div>


<p></p>

<h3>People who liked this idea</h3>

<table class="table">
    <thead>
        <th>
            <tr>
            <td>Alias</td>
            <td>Name</td>
            </tr>

        </th>
    </thead>
<tbody>
    @foreach(var i in @Model.allLikes){
    <tr>
        <td><a href="/UserShow/@i.User.Userid">@i.User.Alias</a></td>
        <td>@i.User.Name</td>
    </tr>
    }
</tbody>
</table>
